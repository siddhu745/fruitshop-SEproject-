<%- include('partials/header.ejs') %> 
<% var total = 0 %> 

<div class="container-fluid">
    <h1 style="position: relative; left:350px">Your Cart</h1> 
    <div class="row">
        <div class="col-md-8">
            <% cartItems.reverse().forEach(element => { %>
                <div class="cart-card">
                    <div class="product-div">
                        <img class="cartImg" src="<%= element.imagesrc %>" alt="">
                        <p style="font-weight: bold; "><%= element.fruitname %></p>
                    </div>
                    <p>
                        <span style="font-weight: 500;">quantity : </span>
                        <%= element.quantity %>
                    </p>
                    <p style="color: rgb(3, 199, 0); font-weight: 700;">
                        <span style="font-weight: 500; color: black;">price :  </span>
                        Rs.<%= element.price %>/-
                    </p>
                    <form action="/delete" method="post">
                        <input type="hidden" name = "productId" value="<%= element._id %>">
                        <button style="border: none; background-color:white">
                            ‚ùå
                        </button>
                    </form>
                </div>
                <% total += parseInt(element.price) %> 
            <%})%> 
            <h4 id="total" style="position: relative; left:700px; color: green;">
                Total price = Rs. <span><%= total %></span>/- 
            </h4>
            <button onclick="send(total)" style="position: relative; top: 30px; left:770px; color:green" class="button-73">
                <a href="/buy">CheckOut</a>
            </button>
        </div>
        <div class="col-md-4">
            <h3> <a href="/store">Continue Shopping....</a> </h3>
        </div>
    </div>
    <br><br><br>
</div>
<%- include('partials/footer.ejs') %> 
